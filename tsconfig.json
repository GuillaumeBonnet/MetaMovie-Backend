{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./build",
		"rootDir": "./",
		"strict": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"exclude": ["jest.config.ts", "**/*.test.ts"]
}
